{
  "name": "quanshijie",
  "private": true,
  "version": "0.11.6",
  "description": "全视界 - 将浏览器变成一张可无限扩展的画布",
  "author": "MaskerPRC",
  "license": "MIT",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/server.js",
    "start": "npm run build && npm run server",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev --inspect\" \"npm run server\" \"wait-on http://localhost:3000 && nodemon\"",
    "electron:dev:debug": "cross-env NODE_ENV=development concurrently -k \"npm run dev\" \"npm run server\" \"wait-on http://localhost:3000 && nodemon --watch electron --exec electron --inspect=5858 .\"",
    "electron:dev-simple": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:3000 && nodemon\"",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "download:mihomo": "node scripts/download-mihomo.js",
    "download:mihomo:all": "node scripts/download-mihomo.js --all",
    "download:mihomo:mac": "node scripts/download-mihomo.js --platform darwin",
    "download:mihomo:linux": "node scripts/download-mihomo.js --platform linux",
    "download:mihomo:win": "node scripts/download-mihomo.js --platform win32",
    "electron:build": "npm run download:mihomo:all && npm run build && electron-builder",
    "electron:build:win": "npm run download:mihomo && npm run build && electron-builder --win",
    "electron:build:mac": "npm run download:mihomo:mac && npm run build && electron-builder --mac",
    "electron:build:linux": "npm run download:mihomo:linux && npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/minimap": "^1.5.4",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "css-selector-generator": "^3.7.0",
    "express": "^4.18.2",
    "gridstack": "^12.3.3",
    "html2canvas": "^1.4.1",
    "http-proxy-agent": "^7.0.0",
    "https-proxy-agent": "^7.0.0",
    "perfect-freehand": "^1.2.2",
    "socks-proxy-agent": "^8.0.0",
    "sqlite3": "^5.1.7",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "adm-zip": "^0.5.16",
    "archiver": "^6.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "38.4.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "node-gyp": "^10.0.0",
    "nodemon": "^3.1.10",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "node-gyp": "^10.0.0"
  },
  "build": {
    "appId": "com.maskerprc.tabhive",
    "productName": "Tab Hive",
    "publish": null,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/256x256.png",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/512x512.png",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/256x256.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "全视界"
    }
  }
}
